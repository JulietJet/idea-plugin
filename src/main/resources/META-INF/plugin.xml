<idea-plugin>
    <id>io.ecisys.idea.idea</id>
    <vendor email="info@qulix.com" url="https://www.qulix.com/">Qulix</vendor>

    <description><![CDATA[This plugin allow to sync autotests with TestRail]]></description>

    <extensions defaultExtensionNs="com.intellij"/>

    <actions>
        <group id="eroshenkoam.idea" text="TestRai Sync" description="TestRail menu">
            <add-to-group group-id="ProjectViewPopupMenuRefactoringGroup" anchor="last"/>
            <action id="eroshenkoam.idea.actions" class="io.ecisys.idea.actions.TestRailExportIdAction"
                    text="Export ID from TestRail" description="Export id from testRail"/>
            <action id="exportIdToAnnotationRefField" class="io.ecisys.idea.actions.TestRailImportIdAction"
                    text="Import ID to AnnotationRef" description="Import id to AnnotationRef"/>
        </group>
    </actions>

</idea-plugin>